---
import WorkLayout from "../../layouts/WorkLayout.astro";
import Img from "../../components/Img.astro";
import Video from "../../components/Video.astro";
---

<WorkLayout title="CG Portraits" tags={["3D Sculpting", "Texturing"]}>
    <p slot="description">A collection of CG portraits I created utilising various techniques and software, including Maya, Substance Painter, ZBrush, and more. My aim is generally to achieve close to photorealism without taking too long on execution.</p>

    <Fragment slot="body">
        <div class="flex flex-col gap-4">
            <Img src="charDemon-Final-edited_smallFile-jpeg6.jpg" alt="Character with horns portrait" dir="case-studies/cg-portraits" />
            <Img src="charWoman-FLAT.jpg" alt="Woman character CG image" dir="case-studies/cg-portraits" />
            
            <div class="grid lg:grid-cols-2 gap-4">
                <Img src="charDemon-Final_Clay.jpg" alt="Character with horns clay render" dir="case-studies/cg-portraits" />
                <Img src="woman_clay.jpg" alt="CG woman portrait clay render" dir="case-studies/cg-portraits" />
            </div>
            
            <Img src="horned_stranger-closeup-01.jpg" alt="Close-up of character with horns CG portrait" dir="case-studies/cg-portraits" />
            <Img src="woman_closeup-01.jpg" alt="Close-up of CG portrait of woman" dir="case-studies/cg-portraits" />
            
            <Video
                src="/videos/demon_char_goggles.mp4"
                formats={["mp4"]}
                autoplay={true}
                muted={true}
                controls={true}
                loop={true}
            />
            
            <Img src="iris_sculpted.jpg" alt="Iris sculpted" dir="case-studies/cg-portraits" />
            <Video
                src="/videos/eye-turntable.mp4"
                formats={["mp4"]}
                autoplay={true}
                muted={true}
                controls={true}
                loop={true}
            />
        </div>
    </Fragment>
</WorkLayout>