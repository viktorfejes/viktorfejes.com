---
import WorkLayout from "../../layouts/WorkLayout.astro";
import Img from "../../components/Img.astro";
---

<WorkLayout title="Celebrities" tags={["Retouching", "Color Grading"]}>
    <!-- <p slot="description"></p> -->

    <Fragment slot="body">
        <div class="flex flex-col gap-4">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="basis-1/3">
                    <Img src="gildstudios-edsheeran-2.jpg" alt="Portrait of Ed Sheeran" dir="case-studies/celebrities" />
                </div>
                <div class="basis-2/3">
                    <Img src="gildstudios-edsheeran-1.jpg" alt="Portrait of Ed Sheeran" dir="case-studies/celebrities" />
                </div>
            </div>

            <Img src="gildstudios-portraits-kevindurant-1.jpg" alt="Portrait of Kevin Durant" dir="case-studies/celebrities" />
            
            <div class="grid md:grid-cols-2 gap-4">
                <Img src="gildstudios-billgates-wired-2.jpg" alt="Portrait of Bill Gates for Wired Magazine" dir="case-studies/celebrities" />
                <Img src="gildstudios-billgates-elpais-1.jpg" alt="Portrait of Bill Gates for El Pais Magazine" dir="case-studies/celebrities" />

                <Img src="gildstudios-portraits-common-1.jpg" alt="Portrait of Common" dir="case-studies/celebrities" />
                <Img src="gildstudios-portraits-anthonyhopkins-1.jpg" alt="Portrait of Anthony Hopkins" dir="case-studies/celebrities" />
            </div>

            <Img src="gildstudios-portraits-cheechmarin-1.jpg" alt="Portrait of Cheech Marin" dir="case-studies/celebrities" />

            <div class="grid md:grid-cols-2 gap-4">
                <Img src="gildstudios-macklemore-1.jpg" alt="Portrait of Macklemore" dir="case-studies/celebrities" />
                <Img src="gildstudios-macklemore-2.jpg" alt="Portrait of Macklemore" dir="case-studies/celebrities" />

                <Img src="gildstudios-samjackson-1.jpg" alt="Portrait of Samuel L. Jackson and LaTanya Jackson for People Magazine" dir="case-studies/celebrities" />
                <Img src="gildstudios-samjackson-3.jpg" alt="Portrait of Samuel L. Jackson and LaTanya Jackson for People Magazine" dir="case-studies/celebrities" />
            </div>
        </div>
    </Fragment>
</WorkLayout>