---
import FeaturedWorkGrid from "../components/FeaturedWorkGrid.astro";
import Layout from "../layouts/Layout.astro";
import WorkGrid from "../components/WorkGrid.astro";
import WorkItem from "../components/WorkItem.astro";
import Img from "../components/Img.astro";
import Video from "../components/Video.astro";
---

<Layout title="Viktor Fejes - Projects">
    <section class="page-title">
        <div class="page-title-inner">
            <!-- <h2>Selected Projects</h2> -->
            <!-- <h2>Future Stories, Immersive Experiences + Advanced Technology</h2> -->
            <!-- <h2>Visual Stories, Creative Tools + Problem Solving.</h2> -->
            <!-- <h2>Curiosity in Action: Art, Tech + Everything Between</h2> -->
            <h2>Visual Stories, Technical Play, and Problem Solving.</h2>
            <div class="grid grid-cols-2">
                <p class="tag">(Projects)</p>
                <p>Here's what keeps me busy â€” a mix of projects spanning different industries and challenges. Take a look at some of my favorite work.</p>
            </div>
        </div>
    </section>
    <section class="projects">
        <div class="projects-inner">
            <WorkGrid>
                <WorkItem name="Acura MDX" client="Personal">
                    <Img src="gildstudios-acuramdx-4.jpg" alt="Something" dir="" />
                </WorkItem>
                <WorkItem name="Bravo, Bravecto!" client="Bravecto">
                    <Video
                        src="/videos/gildstudios-bravecto-commercial-30s.mp4"
                        formats={["mp4"]}
                        autoplay={true}
                        muted={true}
                        controls={false}
                        loop={true}
                    />
                </WorkItem>
                <WorkItem name="Support The Neighborhood" client="DoorDash">
                    <Img src="gildstudios-doordash-2.jpg" alt="Something" dir="" />
                </WorkItem>
                <WorkItem name="Utility LUTs" client="Personal">
                    <Video
                        src="/videos/flora_luts.mp4"
                        formats={["mp4"]}
                        autoplay={true}
                        muted={true}
                        controls={false}
                        loop={true}
                    />
                </WorkItem>
            </WorkGrid>
        </div>
    </section>
</Layout>

<style>
    .page-title {
        margin-top: 16rem;
        margin-bottom: 16rem;
    }

    .page-title h2{
        font-size: var(--font-size-6xl);
        font-weight: var(--font-weight-medium);
        letter-spacing: var(--letter-spacing-tight);
        line-height: 1.1;
        margin-bottom: 1em;
        color: var(--color-neutral-900);
        max-width: 24ch;
    }

    .page-title p {
        /* display: none; */
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-regular);
        color: var(--color-neutral-900);
        line-height: 1.38;
        max-width: 40ch;
    }

    .page-title .tag {
        color: var(--color-neutral-900);
    }
    
    .page-title,
    .projects {
        padding-left: var(--padding-page-left);
        padding-right: var(--padding-page-right);
    }

    .page-title-inner,
    .projects-inner {
        max-width: var(--max-width-xl);
        margin: 0 auto;
    }

    .projects {
        margin-bottom: 8rem;
    }
</style>