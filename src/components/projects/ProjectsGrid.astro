---
import ProjectsItem from "./ProjectsItem.astro";
import projects from "../../content/projects/projects.json";

interface Props {
    show: number;
}

const { show } = Astro.props;

const limitedProjects = show != 0 ? projects.slice(0, show) : projects;
---

<div class="projects-grid">
    {
        limitedProjects.map((project) => (
            <ProjectsItem
                logo={project.icon}
                name={project.name}
                desc={project.desc}
                link={project.url}
                tags={project.tools}
            />
        ))
    }
</div>

<style>
    .projects-grid {
        width: 100%;
        max-width: var(--content-width);
        margin: 0 auto;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 2rem;
        margin-bottom: 4rem;
    }
</style>
