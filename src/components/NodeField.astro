<script>
    function createPath(startX, startY, endX, endY) {
        const midX = (startX + endX) / 2;
        return `M${startX},${startY} C${midX},${startY} ${midX},${endY} ${endX},${endY}`;
    }

    const wire1 = document.getElementById("wire1");

    const svg = document.getElementById("wires");
    const in1 = document.getElementById("in1");
    const out1 = document.getElementById("out1");

    function updateWires() {
        const svgX = svg.getBoundingClientRect().left + window.scrollX;
        const svgY = svg.getBoundingClientRect().top + window.scrollY;

        const in1CoordX = (in1.getBoundingClientRect().left + window.scrollX + in1.getBoundingClientRect().width / 2) - svgX;
        const in1CoordY = (in1.getBoundingClientRect().top + window.scrollY + in1.getBoundingClientRect().height / 2) - svgY;
        const out1CoordX = (out1.getBoundingClientRect().left + window.scrollX + out1.getBoundingClientRect().width / 2) - svgX;
        const out1CoordY = (out1.getBoundingClientRect().top + window.scrollY + out1.getBoundingClientRect().height / 2) - svgY;

        wire1.setAttribute("d", createPath(in1CoordX, in1CoordY, out1CoordX, out1CoordY));
    }

    updateWires();

    window.addEventListener("resize", updateWires);
</script>