---
interface Props {
    title: string;
    type?: string;
}

const { title, type } = Astro.props;
---

<div class={`alert ${type ? type : ""}`}>
    <div class="alert-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-construction"><rect x="2" y="6" width="20" height="8" rx="1"/><path d="M17 14v7"/><path d="M7 14v7"/><path d="M17 3v3"/><path d="M7 3v3"/><path d="M10 14 2.3 6.3"/><path d="m14 6 7.7 7.7"/><path d="m8 6 8 8"/></svg>
    </div>
    <h5 class="title">{title}</h5>
    <p class="desc"><slot /></p>
</div>

<style>
    .alert {
        position: relative;
        width: 100%;
        border: 1px solid var(--color-neutral-200);
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .alert.wip {
        background: #1e1b4b;
        border-color: #312e81;
    }

    .alert-icon {
        position: absolute;
        display: inline-flex;
    }

    .alert-icon svg {
        width: 1.25rem;
        color: var(--color-neutral-700);
    }
    
    .title {
        font-weight: var(--font-weight-semibold);
        color: var(--color-neutral-900);
        padding-left: 2.25rem;
        margin-bottom: 0.25rem;
    }

    .alert.wip .title {
        color: #e0e7ff;
    }
    
    .desc {
        padding-left: 2.25rem;
        font-size: var(--font-size-base);
        color: var(--color-neutral-600);
        line-height: 1.4;
    }

    .alert.wip .desc,
    .alert.wip .alert-icon svg {
        color: #a5b4fc;
    }
</style>