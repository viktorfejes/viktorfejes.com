---
const { href, name, tags } = Astro.props;
---

<a href={href} class="block mb-16">
    <div class="relative rounded-lg overflow-hidden w-full pt-[100%]">
        <div class="absolute inset-0 [&>img]:object-cover [&>img]:object-center [&>img]:w-full [&>img]:h-full">
            <slot />
        </div>
    </div>
    <div class="mt-3">
        <h3 class="text-lg font-medium dark:text-neutral-300">{name}</h3>
        <p class="text-neutral-400 dark:text-neutral-500">{tags}</p>
    </div>
</a>
