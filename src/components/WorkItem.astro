---
const { name, client } = Astro.props;
---

<article class="work-item">
    <a href="#" class="work-block">
        <div class="work-thumbnail">
            <div class="work-media">
                <slot />
            </div>
        </div>
        <div class="work-meta">
            <h2>{ name }</h2>
            <h3>({ client })</h3>
        </div>
    </a>
</article>

<style>
    .work-item {
        grid-column: span 1/span 1;
    }

    .work-block {
        display: block;
    }

    .work-thumbnail {
        position: relative;
        overflow: hidden;
        border-radius: 0.5rem;
        padding-top: 100%;
        margin-bottom: 1rem;
    }

    .work-media {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        transition: transform 0.3s ease-out;
    }

    .work-thumbnail :global(img),
    .work-thumbnail :global(video) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .work-meta {
        font-size: var(--font-size-xl);
        font-weight: var(--font-weight-regular);
        line-height: 1.4;
    }

    .work-item:hover .work-media {
        transform: scale(1.1);
    }
</style>