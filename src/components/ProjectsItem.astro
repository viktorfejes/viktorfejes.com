---
const { title, client, href } = Astro.props;
---

<a href=`${href || "#"}` class="group relative w-full transition duration-300 hover:-translate-y-1.5">
    <div class=`thumbnail relative w-full overflow-hidden pt-[60%]`>
        <slot />
    </div>
    <div class="group-hover:opacity-45 transition duration-200 absolute inset-0 opacity-0 bg-black"></div>
    <div class="absolute inset-0 py-4 px-5 opacity-0 group-hover:opacity-100 transition">
        <h2 class="text-2xl md:text-5xl max-w-[20ch] md:leading-snug font-light tracking-tight">
            {title}
            <br>
            <!-- {client} -->
        </h2>
    </div>
</a>

<style>
    .thumbnail {
        visibility: hidden;
    }

    .thumbnail :global(img),
    .thumbnail :global(video) {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
</style>