---
const { title, client, ar, href } = Astro.props;
---

<a href=`${href || "#"}` class="group relative w-full transition duration-300 hover:-translate-y-1.5">
    <div class=`thumbnail ${ar} relative w-full overflow-hidden`>
        <slot />
    </div>
    <div class="group-hover:opacity-45 transition duration-200 absolute inset-0 opacity-0 bg-black"></div>
    <div class="absolute inset-0 py-4 px-5">
        <h2 class="text-2xl md:text-3xl">
            {title}
            <br>
            â€” {client}
        </h2>
    </div>
</a>

<style>
    .thumbnail :global(img),
    .thumbnail :global(video) {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .ar-sq {
        padding-top: 100%;
    }

    .ar-horizontal {
        padding-top: 66.66%;
    }

    .ar-vertical {
        padding-top: 120%;
    }
</style>