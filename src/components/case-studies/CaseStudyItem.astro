---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { slugify } from "../../assets/scripts/utils.js";

interface Props {
    title: string;
    thumbnail: string;
    tags: string[];
    slug: string;
}

const { title, thumbnail, tags, slug } = Astro.props;

// To be able to include images from non-public directory
const thumb_src = `/src/assets/images/cs/${thumbnail}`;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/images/cs/*.{jpg,jpeg,png}",
);
if (!images[thumb_src]) {
    throw new Error(`"${thumb_src}" not found in "/src/assets/images/cs/`);
}

// Sort tags
const sortedTags = [...tags].sort();
---

<div class="portfolio-item" data-tags={sortedTags}>
    <a href=`/case-studies/${slug}` class="portfolio-click">
        <Image src={images[thumb_src]()} alt=`${title}'s thumbnail` />
        <h3>{title}</h3>
    </a>
</div>

<style>
    .portfolio-item {
        position: relative;
        overflow: hidden;
        border-radius: 1rem;
        padding-top: 66.66%;
    }

    .portfolio-item .portfolio-click {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .portfolio-click::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            0deg,
            rgba(0, 0, 0, 0.6) 0%,
            rgba(0, 0, 0, 0) 32%
        );
        z-index: 0;
    }

    .portfolio-click:hover img {
        transform: scale(1.1);
    }

    .portfolio-item h3 {
        position: absolute;
        margin: 0;
        bottom: 2rem;
        left: 2rem;
        color: #fff;
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-extrabold);
        letter-spacing: var(--letter-spacing-1);
        /* max-width: 18ch; */
        line-height: var(--line-height-heading);
        z-index: 1;
        transition: transform 0.3s ease;
    }

    .portfolio-click:hover h3 {
        transform: translateY(-0.5rem);
    }

